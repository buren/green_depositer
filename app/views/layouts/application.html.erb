<!DOCTYPE html>
<html>
  <head>
    <title>GreenDepositer</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag '//www.google.com/jsapi', 'chartkick' %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.11/css/dataTables.bootstrap.min.css" media="screen" title="no title" charset="utf-8">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.11/js/jquery.dataTables.min.js" charset="utf-8"></script>
  </head>

  <body>
    <nav class="navbar navbar-inverse" >
     <div class="container">
       <div class="navbar-header" >
       <%= link_to "Greenkeeper", root_path, class: "navbar-brand" %>
       </div>
       <ul class="nav navbar-nav" >
         <li class="active"><%= link_to "Home", root_path %></li>
         <li class="dropdown">
           <a class="dropdown-toggle" data-toggle="dropdown" href="#">Page 1
           <span class="caret"></span></a>
           <ul class="dropdown-menu">
             <li><a href="#">Page 1-1</a></li>
             <li><a href="#">Page 1-2</a></li>
             <li><a href="#">Page 1-3</a></li>
           </ul>
         </li>
         <li>
           <%= link_to 'New deposit', new_deposit_path %>
         </li>
         <li><a href="#">Page 3</a></li>
       </ul>
       <ul class="nav navbar-nav navbar-right">
         <% if current_user %>
           <li>
             <%= link_to edit_user_password_path do %>
               <span class="glyphicon glyphicon-user"></span>
               Profile
           <% end %>
          </li>
         <% end %>
         <li>
           <% if current_user %>
               <%= link_to root_path do %>
                 <span class="glyphicon glyphicon-user"></span>
                 Login
               <% end %>
           <% else %>
             <%= link_to new_user_registration_path do %>
               <span class="glyphicon glyphicon-user"></span>
               Register
             <% end %>
           <% end %>
       </li>
       </ul>
     </div>
   </nav>
    <div class="container">
      <%= yield %>
    </div>

    <script type="text/javascript">
      $(document).ready(function() {
        $('table.datatable').DataTable();
      });
    </script>
  </body>
</html>
